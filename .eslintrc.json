{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // Allow string expressions for ARIA attributes
    "react/aria-props": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
